{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}


<section style="background: rgb(0,96,167);
background: radial-gradient(circle, rgba(0,96,167,1) 14%, rgba(0,96,167,1) 41%, rgba(0,212,255,1) 75%);" class="flex items-center justify-center">
    <form method="post" class="w-full max-w-xs">
        {% if error %}
        <div class="alert alert-danger my-20 text-red-500">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
        {% endif %}

        {% if app.user %}
        <div class="mb-3 text-center">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }},
            <a href="{{ path('app_logout') }}" class="text-white">Logout</a>
        </div>
        {% endif %}

        <div style="background-color: #0060A7;" class="px-8 pt-6 pb-8 my-10">
            <div class="mb-4">
                <label class="block text-white text-sm mb-2" for="inputEmail">
                    E-mail
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="inputEmail" type="email" name="email" autocomplete="email" required autofocus placeholder="test@gmail.com">
            </div>
            <div class="mb-6">
                <label class="block text-white text-sm mb-2" for="inputPassword">
                    Mot de passe
                </label>
                <input class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="inputPassword" name="password" autocomplete="current-password" type="password" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {# <p class="text-red-500 text-xs italic">Please choose a password.</p> #}
            </div>
            <div class="flex items-center justify-between">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Sign In
                </button>
                <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">
                    Mdp oublié ?
                </a>
            </div>
        </div>
    </form>
</section>


