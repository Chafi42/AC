{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/contact.css') }}">
{% endblock %}


{% block body %}

	<div class="flex flex-col justify-center items-center md:flex-row md:justify-between text-white">
		<section
			class="bg-white flex flex-col md:flex-row w-full">
            <div class="py-8 lg:py-16  w-full md:w-1/2" style="background-color: #0060A7;">
                <h2 class="mb-4 text-4xl tracking-tight text-center text-white">N'attendez plus pour nous contacter</h2>
                <p class="mb-8 lg:mb-16 font-light text-center text-white sm:text-xl"></p>
               
        {{ form_start(form) }}
            <div>
                {{ form_label(form.email, 'E-mail', {'label_attr': {'class': 'block mb-2 text-sm font-medium'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'shadow-sm border border-gray-300 text-sm rounded-lg block w-full p-2.5', 'required': true}}) }}
            </div>
            <div>
                {{ form_label(form.subject, 'Objet', {'label_attr': {'class': 'block mb-2 text-sm font-medium'}}) }}
                {{ form_widget(form.subject, {'attr': {'class': 'block p-3 w-full text-sm rounded-lg border border-gray-300 shadow-sm', 'required': true}}) }}
            </div>
            <div class="sm:col-span-2">
                {{ form_label(form.message, 'Message', {'label_attr': {'class': 'block mb-2 text-sm font-medium'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'text-black block p-2.5 w-full text-sm rounded-lg shadow-sm border border-gray-300', 'rows': 6}}) }}
            </div>
            {{ form_widget(form.submit, {'attr': {'class': 'py-3 px-5 text-sm font-medium text-center text-white rounded-lg bg-primary-700 sm:w-fit hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800'}}) }}
        {{ form_end(form) }}


 

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}


