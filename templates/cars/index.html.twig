{% extends 'base.html.twig' %}

{% block title %}Cars index{% endblock %}

{% block body %}
    <h1>Cars index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Year</th>
                <th>Mileage</th>
                <th>Fuel</th>
                <th>Type</th>
                <th>GearBox</th>
                <th>Price</th>
                <th>Description</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.brand }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.year }}</td>
                <td>{{ car.mileage }}</td>
                <td>{{ car.fuel }}</td>
                <td>{{ car.type }}</td>
                <td>{{ car.gearBox }}</td>
                <td>{{ car.price }}</td>
                <td>{{ car.description }}</td>
                <td>{{ car.picture }}</td>
                <td>
                    <a href="{{ path('app_cars_show', {'id': car.id}) }}">show</a>
                    <a href="{{ path('app_cars_edit', {'id': car.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cars_vente') }}">Create new</a>
{% endblock %}
