{% extends 'base.html.twig' %}

{% block title %}Cars index
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/show.css') }}"/>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>


{% endblock %}
{% block body %}

	<div class="container mx-auto p-4">
		<section
			class="bg-white p-4 rounded-lg shadow-lg">

			<!-- Car title and images -->
			<div class="mb-4">
				<h1 class="text-center text-2xl md:text-4xl font-bold mb-4">{{ car.brand }}
					{{ car.model }}</h1>

				<!-- Image gallery -->
				<div class="flex flex-wrap justify-center space-x-4 p-2">
					{% for picture in pictures %}
						<img src="{{ asset('assets/img/cars-users/') ~ picture.name }}" alt="{{ picture.name }}" class="w-full sm:w-64 md:w-72 h-full rounded-lg shadow-md mb-2 sm:mb-0">
					{% endfor %}
				</div>
			</div>

			<!-- Car details -->
			<div class="md:w-full mb-4">
				<div class="p-4 rounded-lg shadow-sm detail-car">
					<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 text-center">
						<div>
							<p>
								<span class="font-bold">Type:</span>
								{{ car.type }}</p>
						</div>
						<div>
							<p>
								<span class="font-bold">Carburant:</span>
								{{ car.fuel }}</p>
						</div>
						<div>
							<p>
								<span class="font-bold">Kilomètrage:</span>
								{{ car.mileage }}
								km</p>
						</div>
						<div>
							<p>
								<span class="font-bold">Marque:</span>
								{{ car.brand }}</p>
						</div>
						<div>
							<p>
								<span class="font-bold">Modèle:</span>
								{{ car.model }}</p>
						</div>
						<div>
							<p>
								<span class="font-bold">Année:</span>
								{{ car.year }}</p>
						</div>
						<div class="col-span-1 sm:col-span-2 md:col-span-3">
							<p>
								<span class="font-bold">Prix:</span>
								{{ car.price }}
								€</p>
						</div>
					</div>
				</div>

				<div class="text-center mt-4">
					{% if app.user %}
						<a href="{{ path('app_message_new', {'id': car.id}) }}" style="background-color: #0060A7;" class="btn text-white py-2 px-4 rounded-lg inline-flex items-center">
					
							<i class="fas fa-comments mr-2">Contacter</i>
						</a>
						{# {{ dump(car) }} #}
					{% else %}
						<a href="{{ path('app_login') }}" style="background-color: #0060A7;" class="btn text-white py-2 px-4 rounded-lg inline-flex items-center">
							<i class="fas fa-sign-in-alt mr-2"></i>
							Connectez-vous
						</a>
					{% endif %}
				</div>
			</div>
		</section>
	</div>


{% endblock %}
