<section>
    <div class="container mx-auto p-4">
        <div class="flex flex-col lg:flex-row">
            <!-- Liste des utilisateurs -->
            <div class="w-full lg:w-1/4 bg-white p-4 border rounded-lg shadow-lg">
				<ul class="space-y-4">
					{% for user in users %}
						<li class="flex items-center space-x-4">
							<div>
								<div class="font-bold text-sm text-gray-600 flex mb-1 gap-8">
									{% if app.user and app.user == user %}
										<i class="fas fa-circle text-green-500"></i>
										<a href="{{ path('app_message_conversation', { 'receiverId': user.id }) }}" class="user-link" data-id="{{ user.id }}">{{ user.lastName ~ ' ' ~ user.firstName }}</a>
									{% else %}
